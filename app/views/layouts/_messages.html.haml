- flash.each do |name, msg|
  - msg = [msg] if msg.is_a?(String)
  - msg.each do |text|
    %div{:class => "alert alert-#{flash_to_bootstrap_class(name)} alert-dismissable"}
      %button{:type => "button", :class => "close", 'data-dismiss' => "alert", 'aria-hidden' => "true"} &times;
      = content_tag :div, text, :id => "flash_#{name}"
- # remove msgs
- flash.discard